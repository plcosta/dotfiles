    alias brewi="brew install"
    alias brewr="brew uninstall"
    alias brews="brew search"
    alias brewu="brew update &&  \
                 brew upgrade && \
                 brew cleanup"
fi


# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Update


alias update="sudo softwareupdate --install --all && \
              brewu && \
              npmi -g npm && \
              npmu -g"


