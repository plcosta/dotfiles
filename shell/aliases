# ----------------------------------------------------------------------
# | Update                                                         |
# ----------------------------------------------------------------------
alias f5="source ~/.zshrc"
alias puma-stop="pkill -USR1 puma-dev"

# ----------------------------------------------------------------------
# | Ruby / Rails
# ----------------------------------------------------------------------
alias bp="bundle package"
alias rs="bin/rails s"
